extends ../layout

block content
    .row
        h4
            a(href='/category/create') Th&ecirc;m m&#x1EDB;i danh m&#x1EE5;c  
        .table-responsive
            table.table.table-striped.table-hover.table-bordered
                thead
                    tr.text-primary
                        th ID                   
                        th Category Name                   
                        th Status                   
                        th Edit                   
                        th Delete           
                tbody
                    each category in categories
                        tr
                            td #{category.id}                 
                            td #{category.cat_name}                    
                            if category.cat_status == 1
                                td.text-info New    
                            else
                                td.text-danger Old             
                            td
                                a(href='/category/update/#{category.id}')
                                    span.glyphicon.glyphicon-pencil(aria-hidden='true')
                                    |  Edit                  
                            td
                                a(href='/category/destroy/#{category.id}')
                                    span.glyphicon.glyphicon-trash(aria-hidden='true')
                                    |  Delete    
        .pull-right
